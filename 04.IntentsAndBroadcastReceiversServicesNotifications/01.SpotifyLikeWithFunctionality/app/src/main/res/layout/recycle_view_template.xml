<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp">
    </TextView>

    <Button
        android:background="@drawable/custom_button_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/start_music_button" />

    <Button
        android:background="@drawable/custom_button_stop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/stop_music_button" />

    <Button
        android:background="@drawable/custom_button_forward"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fast_forward_button" />
    <Button
        android:background="@drawable/custom_reverse_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/reverse_button" />

</LinearLayout>