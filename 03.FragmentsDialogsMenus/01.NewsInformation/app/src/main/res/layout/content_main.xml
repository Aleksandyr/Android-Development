<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.akamenov.a01newsinformation.MainActivity"
    tools:showIn="@layout/activity_main">


    <fragment
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="com.example.akamenov.a01newsinformation.ListViewNewsFragment"
        android:id="@+id/list_view_news_fragment"
        class="com.example.akamenov.a01newsinformation.ListViewNewsFragment" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="com.example.akamenov.a01newsinformation.NewsInformationFragment"
        android:id="@+id/news_details_fragment"
        class="com.example.akamenov.a01newsinformation.NewsInformationFragment" />

</LinearLayout>
